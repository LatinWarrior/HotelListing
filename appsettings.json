{
    "ConnectionStrings": {
        "HotelListingConnectionString": "Server=(localdb)\\MSSQLLocalDB;Database=HotelListDb;Trusted_Connection=True;MultipleActiveResultSets=True"
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Microsoft.Hosting.Lifetime": "Information"
        },
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "./logs/log-.txt",
                    "rollingInterval": "Day"
                }
            },
            {
                "Name": "Seq",
                "Args": { "serverUrl": "http://localhost:5341" }
            }
        ]
    },
    "AllowedHosts": "*"
}
